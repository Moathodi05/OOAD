<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
   <Label prefHeight="35.0" prefWidth="271.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Open New Account">
      <padding>
         <Insets bottom="5.0" left="50.0" right="50.0" top="5.0" />
      </padding></Label>
   
   <GridPane hgap="10.0" vgap="10.0">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
      
      <Label text="Account Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <ComboBox fx:id="accountTypeComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      
      <Label text="Initial Deposit (BWP):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <TextField fx:id="initialDepositField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
      <Label text=" Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <TextField fx:id="companyNameField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   </GridPane>
   
   <HBox spacing="10.0">
      <Button fx:id="submitButton" mnemonicParsing="false" text="Open Account" />
      <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
   </HBox>
   
   <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
</VBox>
