<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainMenuController">

    <!-- TOP HEADER -->
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="NextGen Bank" />
                <Label fx:id="welcomeLabel" style="-fx-text-fill: #ecf0f1; -fx-font-size: 16px;" text="Welcome, Customer!" />
            </HBox>
            <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px; -fx-padding: 5 0 0 0;" text="Dashboard - Manage Your Accounts" />
        </VBox>
    </top>

    <!-- LEFT NAVIGATION MENU -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 20; -fx-pref-width: 220;">
            <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 0 0 10 0;" text="MAIN MENU" />
            
            <!-- Navigation Buttons -->
            <VBox spacing="8">
                <Button fx:id="viewAccountBtn" onAction="#handleViewAccountDetails" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 45;" text="View Account Details" />
                
                <Button fx:id="depositBtn" onAction="#handleDeposit" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 45;" text="Deposit Funds" />
                
                <Button fx:id="withdrawBtn" onAction="#handleWithdraw" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 45;" text="Withdraw Funds" />
                
                <Button fx:id="openAccountBtn" onAction="#handleOpenAccount" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 45;" text="Open New Account" />
                
                <Button fx:id="calculateInterestBtn" onAction="#handleCalculateInterest" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 45;" text="Calculate Interest" />
                
                <Button fx:id="viewTransactionsBtn" onAction="#handleViewTransactions" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 45;" text="View Transactions" />
            </VBox>
            
            <!-- Account Summary -->
            <VBox spacing="5" style="-fx-padding: 20 0 0 0;">
                <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 14px;" text="QUICK SUMMARY" />
                <Label fx:id="totalBalanceLabel" style="-fx-text-fill: #2ecc71; -fx-font-size: 12px;" text="Total Balance: BWP 0.00" />
                <Label fx:id="accountsCountLabel" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;" text="Accounts: 0" />
            </VBox>
        </VBox>
    </left>

    <!-- CENTER CONTENT - ACCOUNTS OVERVIEW -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Your Accounts" />
            </HBox>
            
            <!-- Accounts Grid -->
            <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: #ddd; -fx-border-radius: 5;">
                <VBox fx:id="accountsContainer" spacing="10" style="-fx-padding: 15;">
                    <!-- Accounts will be dynamically added here -->
                    <Label style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" text="No accounts found. Open a new account to get started." />
                </VBox>
            </ScrollPane>
            
            <!-- Recent Transactions -->
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Recent Transactions" />
                <TableView fx:id="transactionsTable" prefHeight="150">
                    <columns>
                        <TableColumn prefWidth="100" text="Date" />
                        <TableColumn prefWidth="80" text="Type" />
                        <TableColumn prefWidth="100" text="Amount" />
                        <TableColumn prefWidth="200" text="Description" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- RIGHT SIDEBAR - ACCOUNT DETAILS -->
    <right>
        <VBox spacing="15" style="-fx-padding: 20; -fx-pref-width: 280; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-left-width: 1;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Account Details" />
            
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1; -fx-border-radius: 5;">
                <Label fx:id="selectedAccountLabel" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Select an account" />
                <Label fx:id="accountTypeLabel" style="-fx-text-fill: #7f8c8d;" text="Type: -" />
                <Label fx:id="accountBalanceLabel" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" text="Balance: BWP 0.00" />
                <Label fx:id="accountNumberLabel" style="-fx-text-fill: #7f8c8d;" text="Account #: -" />
                <Label fx:id="interestRateLabel" style="-fx-text-fill: #7f8c8d;" text="Interest Rate: -" />
            </VBox>
            
            <!-- Quick Actions -->
            <VBox spacing="8" />
        </VBox>
    </right>

    <!-- BOTTOM STATUS BAR -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: #34495e; -fx-padding: 8;">
            <Label fx:id="statusLabel" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" text="Ready" />
            <Label fx:id="dateTimeLabel" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;" text="" />
            <Button fx:id="logoutBtn" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 12px;" text="Logout" />
        </HBox>
    </bottom>

</BorderPane>
