<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   
   <Label style="-fx-font-weight: bold; -fx-font-size: 28px; -fx-text-fill: #2c3e50;" text="NEXTGEN BANK" />
   
   <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 30; -fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 10;">
      
      <Label style="-fx-font-weight: bold;" text="Username:" />
      <TextField fx:id="usernameField" prefWidth="250" promptText="Enter username" />
      
      <Label style="-fx-font-weight: bold;" text="Password:" />
      <PasswordField fx:id="passwordField" prefWidth="250" promptText="Enter password" />
   </VBox>
   
   <VBox alignment="CENTER" spacing="10">
      <Button fx:id="loginButton" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 120;" text="Login" />
      <Button fx:id="registerButton" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 120;" text="Register" />
   </VBox>
   
   <Label fx:id="messageLabel" style="-fx-text-fill: #e74c3c;" />
</VBox>
